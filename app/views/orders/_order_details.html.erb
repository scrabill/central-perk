<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Item Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>

    <% @order.menu_items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td>$<%= item.price %></td>
    </tr>
    <% end %>

    <tr>
      <td></td>
      <td>Total:</td>
      <td><%= @order.total %></td>
    </tr>

  </tbody>
</table>
