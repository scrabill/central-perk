<%= form_for @order do |f| %>

  <%= f.hidden_field :user_id, :value => session[:user_id] %>

  <%= f.label :name_for_pickup, class: "label" %>
  <%= f.text_field :name_for_pickup, class: "input" %><br><br>

  <%= f.collection_check_boxes(:menu_item_ids, MenuItem.all, :id, :name, class: "checkbox") %>

  <%= f.submit "Create Order", class: "button is-link"  %>
<% end %>
