<h1>All Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name for Pickup</th>
      <th>Items</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>

    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.name_for_pickup, order_path(order) %></td>
      <td>
        <% order.menu_items.each do |item| %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= order.created_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
    </tr>
    <% end %>

  </tbody>
</table>


<%= link_to "View All Completed Orders", orders_completed_path %>
<%= link_to "Create a New Order", new_user_order_path(current_user) %>
