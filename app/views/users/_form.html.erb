<%= form_for(@user) do |f| %>

  <%= f.label :name, class: "label" %>
  <%= f.text_field :name, class: "input" %><br><br>

  <%= f.label :email, class: "label" %>
  <%= f.email_field :email, class: "input" %><br><br>

  <%= f.label :password, class: "label" %>
  <%= f.password_field :password, class: "input" %><br><br>

  <%= f.submit "Create User", class: "button is-link" %>

<% end %>
