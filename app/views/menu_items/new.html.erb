<h1>Create a New Menu Item</h1>

<%= render partial: 'layouts/errors', locals: {object: @item} %>

<%= form_for(@item) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br><br>

  <%= f.label :price %>
  <%= f.number_field :price, step: :any %><br><br>

  <%= f.submit "Create Item" %>
<% end %>
