<h1>Edit <%= @item.name %></h1>

<%= form_for(@item) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br><br>

  <%= f.label :price %>
  <%= f.number_field :price, step: :any %><br><br>

  <%= f.submit "Update Item" %>
<% end %>
